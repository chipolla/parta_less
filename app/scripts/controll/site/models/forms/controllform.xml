<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>

        <field name="id" type="text" default="0" label="COM_CONTROLL_FORM_LBL_CONTROLL_ID"
            readonly="true" class="readonly"
            description="JGLOBAL_FIELD_ID_DESC" />

       <field name="profile_image" type="file"
            label="COM_CONTROLL_FORM_LBL_CONTROLL_PHOTO"
            description="COM_CONTROLL_FORM_DESC_CONTROLL_PHOTO"
            upload_directory="images/" />

       <field name="name" type="text" size="40" class="inputbox"
            label="COM_CONTROLL_FORM_LBL_CONTROLL_NAME"
            description="COM_CONTROLL_FORM_DESC_CONTROLL_NAME"
 			required="true"
            filter="safehtml" />

       <field name="designation" type="text" size="40" class="inputbox"
            label="COM_CONTROLL_FORM_LBL_CONTROLL_DESIGNATION"
            description="COM_CONTROLL_FORM_DESC_CONTROLL_DESIGNATION"
            filter="safehtml" />

       <field name="company" type="text" size="40" class="inputbox"
            label="COM_CONTROLL_FORM_LBL_CONTROLL_COMPANY"
            description="COM_CONTROLL_FORM_DESC_CONTROLL_COMPANY"
            filter="safehtml" />

       <field name="location" type="text" size="40" class="inputbox"
            label="COM_CONTROLL_FORM_LBL_CONTROLL_LOCATION"
            description="COM_CONTROLL_FORM_DESC_CONTROLL_LOCATION"
            filter="safehtml" />

       <field name="controll" type="textarea" size="40" class="inputbox"
            label="COM_CONTROLL_FORM_LBL_CONTROLL_CONTROLL"
            description="COM_CONTROLL_FORM_DESC_CONTROLL_CONTROLL"
            required="true"
            filter="safehtml" />

       <field name="created_by" type="createdby" default=""
            label="COM_CONTROLL_FORM_LBL_CONTROLL_CREATED_BY"
            description="COM_CONTROLL_FORM_DESC_CONTROLL_CREATED_BY"  />

         <field
        name="state"
        type="list"
        label="JSTATUS"
        description="JFIELD_PUBLISHED_DESC"
        class="inputbox"
        size="1"
        default="1">
        <option value="1">JPUBLISHED</option>
        <option value="0">JUNPUBLISHED</option>
        <option value="2">JARCHIVED</option>
        <option value="-2">JTRASHED</option>
    </field>

                        <field name="checked_out" type="hidden" filter="unset" />
        <field name="checked_out_time" type="hidden" filter="unset" />

	</fieldset>

</form>
