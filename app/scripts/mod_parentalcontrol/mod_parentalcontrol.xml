<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="1.6.0" client="site" method="install">
 <name>Parental Control</name>
 <author>Hanna Labushkina</author>
 <creationDate>2017</creationDate>
 <copyright>All rights reserved by www.parta.of.by</copyright>
 <license>GPL 2.0</license>
 <authorEmail>info@parta.of.by</authorEmail>
 <authorUrl>www.parta.of.by</authorUrl>
 <version>1.0.1</version>
 <TLP_DESCription>Joomla module to display list of student lessons</TLP_DESCription>
    <!-- Listing of all files that should be installed for the module to function -->
 <files>
        <!-- The "module" attribute signifies that this is the main controller file -->
  <filename module="mod_parentalcontrol">mod_parentalcontrol.php</filename>
  <filename>index.html</filename>
  <filename>helper.php</filename>
  <filename>tmpl/default.php</filename>
  <filename>tmpl/index.html</filename>
 </files>
    <languages>
        <!-- Any language files included with the module -->
        <language tag="ru-RU">ru-RU.mod_parentalcontrol.ini</language>
    </languages>
    <!-- Optional parameters -->
 <config>
            <fields name="params">
                <fieldset name="basic">
                    <field
                        name="moduleclass_sfx"
                        type="text"
                        default=""
                        label="MOD_PARENTALCONTROL_LABEL_CLASS_SUFFIX"
                        description="MOD_PARENTALCONTROL_DESC_MOD_SUFFIX">
                    </field>
                     <field
                        name="@spacer"
                        type="spacer"
                        default=""
                        label=""
                        description="">
                    </field>
				   <field name="category" addfieldpath="administrator/components/com_parentalcontrol/models/fields"
                  type="TestimonialCategory"
                  label="MOD_TLPTESTIMONIAL_LABEL_SELECT_CATEGORY"
                  description="MOD_TLPTESTIMONIAL_DESC_SELECT_CATEGORY"   />

                     <field
                        name="testimonialcount"
                        type="text"
                        default="5"
                        label="MOD_PARENTALCONTROL_LABEL_TOTAL_TESTIMONIAL_COUNT"
                        description="MOD_PARENTALCONTROL_DESC_TOTAL_TESTIMONIAL_COUNT">
                    </field>
					<field
                        name="showno"
                        type="text"
                        default="1"
                        label="MOD_PARENTALCONTROL_LABEL_VISIBLE_COUNT"
                        description="MOD_PARENTALCONTROL_DESC_VISIBLE_COUNT">
                    </field>

					<field name="ordering" type="list" default="id" class="btn-group btn-group-yesno"
					label="MOD_PARENTALCONTROL_LBLEL_ORDERING"
					description="MOD_PARENTALCONTROL_DESC_ORDERING">
					  <option value="id">ID</option>
					  <option value="name">Name</option>
					  <option value="ordering">Ordering</option>
					</field>

					<field name="readmore" type="radio" default="0" class="btn-group btn-group-yesno" label="MOD_PARENTALCONTROL_LABEL_ENABLE_READMORE" description="MOD_PARENTALCONTROL_DESC_ENABLE_READMORE">
					  <option value="1">True</option>
					  <option value="0">False</option>
					</field>
					<field
                        name="readmore_text"
                        type="text"
                        default="more"
                        label="MOD_PARENTALCONTROL_LBLEL_READMORE_TEXT"
                        description="MOD_PARENTALCONTROL_DESC_READMORE_TEXT">
                    </field>
					<field
                        name="character_limit"
                        type="text"
                        default="100"
                        label="MOD_PARENTALCONTROL_LBLEL_CHARACTER_LIMIT"
                        description="MOD_PARENTALCONTROL_DESC_CHARACTER_LIMIT">
                    </field>
					<field name="testimonialmenuid" type="menuitem" default="45" label="MOD_PARENTALCONTROL_LBLEL_SET_MENUID" description="MOD_PARENTALCONTROL_DESC_SET_MENUID" />

					<field name="backgroundimage" type="media"
						label="MOD_PARENTALCONTROL_LABEL_BACKGROUND_IMAGE"
                        description="MOD_PARENTALCONTROL_DESC_BACKGROUND_IMAGE"
					 	directory="tlptestimonial" />
					<field
                        name="imgborder"
                        type="text"
                        default="5"
                        label="MOD_PARENTALCONTROL_LABEL_IMAGE_BORDER"
                        description="MOD_PARENTALCONTROL_DESC_IMAGE_BORDER">
                    </field>
					<field name="imgbordercolor" type="color" default="#e81717"
						label="MOD_PARENTALCONTROL_LABEL_IMAGE_BORDER_COLOR"
						description="MOD_PARENTALCONTROL_DESC_IMAGE_BORDER_COLOR" />

					<field name="namefontsize" type="integer" default="16"
						label="MOD_PARENTALCONTROL_LABEL_NAME_FONT_SIZE"
						description="MOD_PARENTALCONTROL_DESC_NAME_FONT_SIZE"
						first="10" last="20" step="1" />

					<field name="namecolor" type="color" default="#e81717"
						label="MOD_PARENTALCONTROL_LABEL_NAME_COLOR"
						description="MOD_PARENTALCONTROL_DESC_NAME_COLOR" />

					<field name="designfontsize" type="integer" default="16"
						label="MOD_PARENTALCONTROL_LABEL_DESIGN_FONT_SIZE"
						description="MOD_PARENTALCONTROL_DESC_DESIGN_FONT_SIZE"
						first="10" last="20" step="1" />

					<field name="designcolor" type="color" default="#0a0aa8"
						label="MOD_PARENTALCONTROL_LABEL_DESIGN_COLOR"
						description="MOD_PARENTALCONTROL_DESC_DESIGN_COLOR" />

					<field name="mainfontsize" type="integer" default="16"
						label="MOD_PARENTALCONTROL_LABEL_MAIN_TEXT_FONT_SIZE"
						description="MOD_PARENTALCONTROL_DESC_MAIN_TEXT_FONT_SIZE"
						first="10" last="20" step="1" />

					<field name="maincolor" type="color" default="#ffffff"
						label="MOD_PARENTALCONTROL_LABEL_MAIN_TEXT_COLOR"
						description="MOD_PARENTALCONTROL_DESC_MAIN_TEXT_COLOR" />
					<field
                        name="speed"
                        type="text"
                        default="200"
                        label="MOD_PARENTALCONTROL_LABEL_SLIDER_SPEED"
                        description="MOD_PARENTALCONTROL_DESC_SLIDER_SPEED">
                    </field>
					<field name="autoplay" type="radio" default="true" class="btn-group btn-group-yesno" label="MOD_PARENTALCONTROL_LABEL_AUTO_PLAY" description="">
					  <option value="true">True</option>
					  <option value="false">False</option>
					</field>

					<field name="navigation" type="radio" default="false" class="btn-group btn-group-yesno" label="MOD_PARENTALCONTROL_LABEL_NAVIGATION" description="">
					  <option value="true">True</option>
					  <option value="false">False</option>
					</field>

					<field name="pagination" type="radio" default="true" class="btn-group btn-group-yesno" label="MOD_PARENTALCONTROL_LABEL_PAGINATION" description="">
					  <option value="true">True</option>
					  <option value="false">False</option>
					</field>

					<field name="responsive" type="radio" default="true" class="btn-group btn-group-yesno" label="MOD_PARENTALCONTROL_LABEL_RESPONSIVE" description="">
					  <option value="true">True</option>
					  <option value="false">False</option>
					</field>
					<field name="lazyload" type="radio" default="true" class="btn-group btn-group-yesno" label="MOD_PARENTALCONTROL_LABEL_LAZYLOAD" description="">
					  <option value="true">True</option>
					  <option value="false">False</option>
					</field>

					<field name="enablejq" type="radio" default="false" class="btn-group btn-group-yesno" label="MOD_PARENTALCONTROL_LABEL_ENABLEJQUERY" description="">
					  <option value="true">True</option>
					  <option value="false">False</option>
					</field>

                </fieldset>
            </fields>
    </config>
</extension>
