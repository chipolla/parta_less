<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="3.0" method="upgrade">
    <name>com_parentalcontrol</name>
    <creationDate>2017-02-22</creationDate>
    <copyright>Copyright (C) 2014. All rights reserved.</copyright>
    <license>GNU General Public License version 2 or later; see LICENSE.txt</license>
    <author>chipolla</author>
    <authorEmail>labushkina@gmail.com</authorEmail>
    <authorUrl>http://www.parta.of.by</authorUrl>
    <version>1.0.1</version>
    <description>A parentalcontrol Management component to manage lessons</description>



    <install> <!-- Runs on install -->
        <sql>
            <file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
        </sql>
    </install>
    <uninstall> <!-- Runs on uninstall -->
        <sql>
            <file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
        </sql>
    </uninstall>

    <files folder="site">
        <filename>index.html</filename>
        <filename>parentalcontrol.php</filename>
        <filename>controller.php</filename>
        <filename>router.php</filename>
        <folder>views</folder>
        <folder>models</folder>
        <folder>controllers</folder>
        <folder>helpers</folder>
        <folder>assets</folder>
    </files>
    <languages folder="languages/site">
      <language tag="ru-RU">ru-RU/ru-RU.com_parentalcontrol.ini</language>
    </languages>
    <administration>
        <menu>COM_PARENTALCONTROL</menu>
        <submenu>

			<menu link="option=com_parentalcontrol&amp;view=subjects" view="subjects"  alt="Parentalcontrol/Subjects">COM_TLPTESTIMONIAL_TITLE_SUBJECTS</menu>
			<menu link="option=com_parentalcontrol&amp;view=groups" view="groups"  alt="Parentalcontrol/Groups">COM_TLPTESTIMONIAL_TITLE_GROUPS</menu>
      <menu link="option=com_parentalcontrol&amp;view=students" view="students"  alt="Parentalcontrol/Students">COM_TLPTESTIMONIAL_TITLE_STUDENTS</menu>
      <menu link="option=com_parentalcontrol&amp;view=teachers" view="teachers"  alt="Parentalcontrol/Teachers">COM_TLPTESTIMONIAL_TITLE_TEACHERS</menu>
      <menu link="option=com_parentalcontrol&amp;view=lessons" view="lessons" alt="Parentalcontrol/Lessons">COM_TLPTESTIMONIAL_TITLE_LESSONS</menu>
      <menu link="option=com_parentalcontrol&amp;view=tests" view="tests"  alt="Parentalcontrol/Tests">COM_TLPTESTIMONIAL_TITLE_TESTS</menu>
      <menu link="option=com_parentalcontrol&amp;view=settings" view="settings"  alt="Parentalcontrol/Settings">COM_TLPTESTIMONIAL_TITLE_SETTINGS</menu>

        </submenu>
        <files folder="administrator">
            <filename>config.xml</filename>
            <filename>controller.php</filename>
            <filename>index.html</filename>
            <filename>parentalcontrol.php</filename>
            <folder>controllers</folder>
            <folder>helpers</folder>
            <folder>models</folder>
            <folder>sql</folder>
            <folder>tables</folder>
            <folder>views</folder>
        </files>
        <languages folder="languages/administrator">
          <language tag="ru-RU">ru-RU/ru-RU.com_parentalcontrol.ini</language>
          <language tag="ru-RU">ru-RU/ru-RU.com_parentalcontrol.sys.ini</language>
        </languages>
    </administration>
    <plugins>
        <plugin group="search" plugin="parentalcontrol"/>
    </plugins>

</extension>
